{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowImportingTsExtensions": true,
    "noEmit":true,
    "incremental": true,
    "paths": {

      "@excalidraw/types": ["../../packages/types/src/index.ts", "../../packages/types/src/schemas.ts"]
    },
    "typeRoots": [
      "../../packages/types/src"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],

  
}
